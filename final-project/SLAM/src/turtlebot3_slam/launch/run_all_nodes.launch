<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, hector]"/>
  <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>
  <arg name="open_rviz" default="true"/>
  <arg name="bag_filename" default="/home/zhuzhengming/workspace/SLAM/rosbag/record1.bag"/>

  <param name="use_sim_time" value="true" />
  
  <!-- Turtlebots Gazebo -->
  <!-- <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_house.launch"> -->
  <!-- </include> -->

  <!-- keyboards -->
  <!-- <node pkg="turtlebot3_teleop" type="turtlebot3_teleop_key" name="turtlebot3_teleop_key"/> -->
    
  <!-- TurtleBot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- SLAM: Gmapping, Hector-->
  <include file="$(find turtlebot3_slam)/launch/turtlebot3_$(arg slam_methods).launch">
    <arg name="model" value="$(arg model)"/>
    <arg name="configuration_basename" value="$(arg configuration_basename)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find turtlebot3_slam)/rviz/turtlebot3_$(arg slam_methods).rviz"/>
  </group>
  
  <!--play bagfile -->
  <node name="playbag" pkg="rosbag" type="play"
  	args="$(arg bag_filename)" /> 
  	
</launch>
